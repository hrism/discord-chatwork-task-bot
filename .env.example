# Discord Bot Token
# Discord Developer Portalで取得: https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_bot_token_here

# Chatwork API Token
# Chatwork APIトークンページで取得: https://www.chatwork.com/service/packages/chatwork/subpackages/api/token.php
CHATWORK_API_TOKEN=your_chatwork_api_token_here

# Chatwork Room ID
# 通知を送信するChatworkルームのID（URLから取得: https://www.chatwork.com/#!rid******）
CHATWORK_ROOM_ID=your_chatwork_room_id_here

# OpenAI API Key（オプション）
# 自然言語でタスク操作を可能にします。設定しない場合は従来のキーワードマッチングで動作します
# 取得: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# タイムゾーン設定
TIMEZONE=Asia/Tokyo

# 定期通知の時刻（24時間表記）
MORNING_NOTIFY_HOUR=8
